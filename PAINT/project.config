# 3D Paint with Neural Networks - Project Configuration
# =====================================================

[project]
name = paint3d
version = 1.0.0
description = 3D Paint with Neural Networks - Generate 3D objects from 2D paintings using AI

[build]
compiler = gcc
flags = -Wall -Wextra -std=c99 -O2
includes = -Isrc -I../utils -I../utils/SDL3 -I../utils/NN
libs = -lm -pthread
frameworks = -framework OpenGL -arch arm64

[directories]
src = src
bin = bin
lib = lib
build = build
utils = ../utils

[components]
paint = src/core/paint.c
viewer = src/viewer/view_3d.c src/utils/mesh_loader.c
test = src/utils/test_mesh_generation.c

[dependencies]
sdl3 = pkg-config --cflags --libs sdl3 sdl3-ttf
neural = ../utils/NN/CONVOLUTION.c ../utils/NN/TRANSFORMER.c ../utils/NN/NN.c
sdl_compat = ../utils/SDL3/SDL3_compat.c

[training]
epochs = 50
batch_size = 4
learning_rate = 0.01
early_stopping_patience = 10
convergence_threshold = 0.001

[canvas]
size = 64
pixel_size = 8
screen_width = 1200
screen_height = 800

[neural_networks]
convolution_channels = 16
convolution_kernel = 3
transformer_heads = 4
transformer_layers = 2
transformer_dimension = 128

[output]
mesh_format = custom
viewer_format = wireframe
export_formats = mesh, glb

[controls]
paint_left = MOUSE_LEFT
paint_right = MOUSE_RIGHT
toggle_3d = SPACE
process_nn = ENTER
toggle_training = T
load_assets = L
train_networks = R
save_networks = S
load_trained = O
generate_3d = G
view_3d = V
exit = ESC
