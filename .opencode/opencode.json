{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "github-search": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "filesystem": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem"],
      "enabled": true
    },
    "openclaw-webhook": {
      "type": "local",
      "command": ["python3", "-m", "automation_framework.python.webhook_server"],
      "enabled": true,
      "port": 8765
    }
  },
  "tools": {
    "context7": true,
    "github-search": true,
    "filesystem": true,
    "skill": true,
    "openclaw": true
  },
  "skills": {
    "*": "allow"
  },
  "webhook": {
    "openclaw": {
      "url": "http://localhost:8765/webhook",
      "auth_token": "${OPENCLAW_WEBHOOK_TOKEN}",
      "retry_count": 3,
      "timeout_seconds": 30
    }
  }
}
