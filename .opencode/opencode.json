{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "github-search": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "filesystem": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem"],
      "enabled": true
    }
  },
  "tools": {
    "context7": true,
    "github-search": true,
    "filesystem": true,
    "skill": true
  },
  "skills": {
    "*": "allow"
  }
}

